---
import { Image } from "astro:assets";

const calculateAge = () => {
  const birthday = "Jan 27 2003";
  const dateOfBirth = new Date(birthday);

  const diff = new Date().getTime() - dateOfBirth.getTime();
  // 1 an = 31556736000 millisecondes
  const age = Math.floor(diff / 31556736000);
  return age;
};
