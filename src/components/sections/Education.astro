---
import { getCollection } from "astro:content";

const allEducation = (await getCollection("education")).sort((a, b) => {
  return b.data.startDate.getTime() - a.data.startDate.getTime();
});

function formatDate(date: Date) {
  return date.toLocaleDateString("fr-FR", {
    month: "short",
    year: "numeric",
  });
}
---

<section id="projects" class="flex justify-center items-start lg:items-center flex-col max-w-5xl w-full mx-auto py-14 lg:py-24">
    <h2 class="text-3xl font-semibold mb-8">Formation</h2>
    <div class="max-w-2xl mx-auto">
        {allEducation.map(ed => (
            <div class="my-8 space-y-3">
                <div class="flex justify-between items-center flex-wrap">
                    <h3 class="text-xl font-semibold">{ed.data.degree} {ed.data.name}</h3>
                    <p class="text-sm text-gray-300">
                    {formatDate(ed.data.startDate)} - {ed.data.endDate ? formatDate(ed.data.endDate) : "aujourd'hui"}
                    </p>
                </div>
                <p class="text-sm text-blue-400">{ed.data.school}, {ed.data.city}</p>
                <p>{ed.body}</p>
            </div>
        ))}
    </div>
</section>