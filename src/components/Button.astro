---
export interface Props {
  href?: string;
}

const { href } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class="inline-block rounded-lg bg-blue-600 px-4 py-3 font-semibold transition-all hover:bg-blue-500 focus:outline-none"
    >
      <slot />
    </a>
  ) : (
    <button class="inline-block rounded-lg bg-blue-600 px-4 py-3 font-semibold transition-all hover:bg-blue-500 focus:outline-none">
      <slot />
    </button>
  )
}
